# Auto detect text files and perform LF normalization
* text=auto

# Force LF for specific text files
*.md text eol=lf
*.json text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.sql text eol=lf
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Force CRLF for Windows scripts
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

