    {
      "parameters": {
        "operation": "executeQuery",
        "query": "-- Buscar pr√≥ximo appointment activo de este cliente\nSELECT \n    a.id AS appointment_id,\n    a.customer_id,\n    COALESCE(c.name, a.customer_name) AS customer_name,\n    a.appointment_date,\n    a.appointment_time,\n    s.name AS service_name,\n    -- √öltima confirmaci√≥n enviada\n    (SELECT cc.message_type \n     FROM customer_confirmations cc\n     WHERE cc.appointment_id = a.id\n     ORDER BY cc.sent_at DESC\n     LIMIT 1) AS last_message_type\nFROM appointments a\nLEFT JOIN customers c ON a.customer_id = c.id\nLEFT JOIN services s ON a.service_id = s.id\nWHERE COALESCE(c.phone, a.customer_phone) = '{{$json.customer_phone}}'\nAND a.status IN ('pending', 'confirmed')\nAND a.appointment_date >= CURRENT_DATE\nORDER BY a.appointment_date ASC, a.appointment_time ASC\nLIMIT 1;",
        "additionalFields": {}
      },
      "name": "Buscar appointment del cliente",
